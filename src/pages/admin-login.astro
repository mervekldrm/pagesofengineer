---
import ReactApp from '../react-app/App.jsx';
const title = 'Admin Login - Pages of Engineer';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <!-- Mount the React SPA for direct /admin-login navigation.
         Use client:load and client:only to ensure BrowserRouter runs only in the browser. -->
    <ReactApp client:load client:only="react" />
  </body>
</html>
